{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2020", "es2017", "es7", "es6", "dom"],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

