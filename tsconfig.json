{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2020",
        "outDir": "./dist/esm",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

